import random
import string
import tkinter as tk
from tkinter import messagebox

# Function to generate a password
def generate_password():
    try:
        length = int(length_entry.get())
        if length < 1:
            messagebox.showerror("Error", "Password length must be greater than 0.")
            return

        # Define the characters to use in the password
        characters = string.ascii_letters + string.digits + string.punctuation
        password = ''.join(random.choices(characters, k=length))

        # Display the generated password
        password_entry.delete(0, tk.END)
        password_entry.insert(0, password)
    except ValueError:
        messagebox.showerror("Error", "Please enter a valid number for the length.")

# Create the main window
window = tk.Tk()
window.title("Password Generator")

# Create a label and entry for the password length
length_label = tk.Label(window, text="Enter the desired password length:", font=('Arial', 12))
length_label.pack(pady=10)

length_entry = tk.Entry(window, width=20)
length_entry.pack(pady=5)

# Create a button to generate the password
generate_button = tk.Button(window, text="Generate Password", command=generate_password)
generate_button.pack(pady=10)

# Create an entry to display the generated password
password_entry = tk.Entry(window, width=50)
password_entry.pack(pady=10)

# Run the application
window.mainloop()