import tkinter as tk
from tkinter import messagebox

# Create the main window
window = tk.Tk()
window.title("To-Do List Application")

# Initialize the to-do list
todo_list = []

# Function to add a task
def add_task():
    task = task_entry.get()
    if task != "":
        todo_listbox.insert(tk.END, task)
        todo_list.append(task)
        task_entry.delete(0, tk.END)
    else:
        messagebox.showwarning("Warning", "You must enter a task.")

# Function to remove a task
def remove_task():
    try:
        selected_task_index = todo_listbox.curselection()[0]
        todo_listbox.delete(selected_task_index)
        todo_list.pop(selected_task_index)
    except IndexError:
        messagebox.showwarning("Warning", "You must select a task to remove.")

# Function to update a task
def update_task():
    try:
        selected_task_index = todo_listbox.curselection()[0]
        new_task = task_entry.get()
        if new_task != "":
            todo_listbox.delete(selected_task_index)
            todo_listbox.insert(selected_task_index, new_task)
            todo_list[selected_task_index] = new_task
            task_entry.delete(0, tk.END)
        else:
            messagebox.showwarning("Warning", "You must enter a new task.")
    except IndexError:
        messagebox.showwarning("Warning", "You must select a task to update.")

# Create input field for new tasks
task_entry = tk.Entry(window, width=40)
task_entry.pack(pady=10)

# Create buttons
add_button = tk.Button(window, text="Add Task", command=add_task)
add_button.pack(pady=5)

update_button = tk.Button(window, text="Update Task", command=update_task)
update_button.pack(pady=5)

remove_button = tk.Button(window, text="Remove Task", command=remove_task)
remove_button.pack(pady=5)

# Create a listbox to display tasks
todo_listbox = tk.Listbox(window, height=10, width=50, selectmode=tk.SINGLE)
todo_listbox.pack(pady=10)

# Run the application
window.mainloop()